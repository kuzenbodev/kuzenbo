  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!**/*.stories.js",
        "!**/*.stories.jsx",
        "!**/*.stories.ts",
        "!**/*.stories.tsx",
        "!**/*.stories.mdx"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:storybook": {
      "outputs": ["storybook-static/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    }
  }
