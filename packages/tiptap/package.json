{
  "name": "@kuzenbo/tiptap",
  "version": "0.0.1-alpha.4",
  "private": true,
  "description": "Composable Tiptap editor primitives for Kuzenbo.",
  "keywords": [
    "editor",
    "kuzenbo",
    "react",
    "rich-text",
    "tiptap",
    "ui"
  ],
  "homepage": "https://github.com/kuzenbodev/kuzenbo#readme",
  "bugs": {
    "url": "https://github.com/kuzenbodev/kuzenbo/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuzenbodev/kuzenbo.git",
    "directory": "packages/tiptap"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./styles.css": "./src/styles/tiptap-editor.css",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "./styles.css": "./dist/styles/tiptap-editor.css",
      "./package.json": "./package.json"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsgo --noEmit --declaration false --declarationMap false",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "storybook": "storybook dev --port 6108 --config-dir .storybook",
    "build:storybook": "storybook build --config-dir .storybook"
  },
  "dependencies": {
    "@kuzenbo/core": "workspace:*",
    "@tiptap/core": "catalog:",
    "@tiptap/extension-color": "catalog:",
    "@tiptap/extension-highlight": "catalog:",
    "@tiptap/extension-link": "catalog:",
    "@tiptap/extension-mention": "catalog:",
    "@tiptap/extension-placeholder": "catalog:",
    "@tiptap/extension-table": "catalog:",
    "@tiptap/extension-table-cell": "catalog:",
    "@tiptap/extension-table-header": "catalog:",
    "@tiptap/extension-table-row": "catalog:",
    "@tiptap/extension-task-item": "catalog:",
    "@tiptap/extension-task-list": "catalog:",
    "@tiptap/extension-text-align": "catalog:",
    "@tiptap/extension-text-style": "catalog:",
    "@tiptap/extension-underline": "catalog:",
    "@tiptap/markdown": "catalog:",
    "@tiptap/pm": "catalog:",
    "@tiptap/react": "catalog:",
    "@tiptap/starter-kit": "catalog:",
    "@tiptap/suggestion": "catalog:",
    "tailwind-variants": "catalog:"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "catalog:",
    "@happy-dom/global-registrator": "catalog:",
    "@kuzenbo/storybook": "workspace:*",
    "@kuzenbo/styles": "workspace:*",
    "@kuzenbo/theme": "workspace:*",
    "@storybook/addon-a11y": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/react": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "bun-types": "catalog:",
    "happy-dom": "catalog:",
    "publint": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "storybook": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@kuzenbo/core": "^0.0.1-alpha.4",
    "@kuzenbo/theme": "^0.0.1-alpha.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
