{
  "name": "@kuzenbo/ai",
  "version": "0.0.6",
  "private": true,
  "description": "AI-oriented UI, hooks, and utilities for Kuzenbo.",
  "keywords": [
    "ai",
    "hooks",
    "kuzenbo",
    "react",
    "ui"
  ],
  "homepage": "https://github.com/kuzenbodev/kuzenbo#readme",
  "bugs": {
    "url": "https://github.com/kuzenbodev/kuzenbo/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuzenbodev/kuzenbo.git",
    "directory": "packages/ai"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./hooks/use-ai-session": "./src/hooks/use-ai-session/use-ai-session.ts",
    "./ui/ai-widget": "./src/ui/ai-widget/ai-widget.tsx",
    "./utils/build-ai-prompt": "./src/utils/build-ai-prompt/build-ai-prompt.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      "./hooks/use-ai-session": "./dist/hooks/use-ai-session.js",
      "./ui/ai-widget": "./dist/ui/ai-widget.js",
      "./utils/build-ai-prompt": "./dist/utils/build-ai-prompt.js",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsgo --noEmit --declaration false --declarationMap false",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "storybook": "storybook dev --port 6105 --config-dir .storybook",
    "build:storybook": "storybook build --config-dir .storybook"
  },
  "dependencies": {
    "tailwind-merge": "catalog:",
    "tailwind-variants": "catalog:"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "catalog:",
    "@happy-dom/global-registrator": "catalog:",
    "@kuzenbo/storybook": "workspace:*",
    "@kuzenbo/styles": "workspace:*",
    "@kuzenbo/theme": "workspace:*",
    "@storybook/addon-a11y": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/react": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "bun-types": "catalog:",
    "happy-dom": "catalog:",
    "publint": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "storybook": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@kuzenbo/core": "^0.0.6",
    "@kuzenbo/theme": "^0.0.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
