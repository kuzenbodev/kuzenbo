{
  "name": "@kuzenbo/theme",
  "version": "0.0.5",
  "private": false,
  "description": "Theme tokens, runtime, and prebuilt themes for Kuzenbo.",
  "keywords": [
    "component-library",
    "design-system",
    "kuzenbo",
    "react",
    "tailwind",
    "ui"
  ],
  "homepage": "https://github.com/kuzenbodev/kuzenbo#readme",
  "bugs": {
    "url": "https://github.com/kuzenbodev/kuzenbo/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuzenbodev/kuzenbo.git",
    "directory": "packages/theme"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./theme-provider": "./src/theme-provider.tsx",
    "./package.json": "./package.json",
    "./default.css": "./src/default.css",
    "./prebuilt/*.css": "./src/prebuilt/*.css"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": "./dist/index.js",
      "./theme-provider": "./dist/theme-provider.js",
      "./package.json": "./package.json",
      "./default.css": "./dist/default.css",
      "./prebuilt/*.css": "./dist/prebuilt/*.css"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "tsdown src/index.ts src/theme-provider.tsx",
    "dev": "tsdown src/index.ts src/theme-provider.tsx --watch",
    "typecheck": "tsgo --noEmit --declaration false --declarationMap false",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "tailwindcss": "catalog:",
    "tw-animate-css": "catalog:"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "catalog:",
    "@happy-dom/global-registrator": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "bun-types": "catalog:",
    "happy-dom": "catalog:",
    "next-themes": "catalog:",
    "publint": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "next-themes": {
      "optional": true
    }
  }
}
