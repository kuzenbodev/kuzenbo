{
  "name": "@kuzenbo/storybook",
  "version": "0.0.1",
  "private": true,
  "description": "Shared Storybook configuration for Kuzenbo workspaces.",
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./main": {
      "types": "./src/main.ts",
      "import": "./src/main.ts",
      "default": "./src/main.ts"
    },
    "./preview": {
      "types": "./src/preview.ts",
      "import": "./src/preview.ts",
      "default": "./src/preview.ts"
    },
    "./preview.css": "./src/preview.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "typecheck": "tsgo --noEmit --declaration false --declarationMap false",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@kuzenbo/styles": "workspace:*",
    "@kuzenbo/theme": "workspace:*",
    "@storybook/addon-themes": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@tailwindcss/vite": "catalog:"
  },
  "devDependencies": {
    "bun-types": "catalog:",
    "typescript": "catalog:"
  }
}
