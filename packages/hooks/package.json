{
  "name": "@kuzenbo/hooks",
  "version": "0.0.1-alpha.4",
  "private": false,
  "description": "Standalone React hooks for Kuzenbo.",
  "keywords": [
    "hooks",
    "kuzenbo",
    "react",
    "react-hooks",
    "typescript"
  ],
  "homepage": "https://github.com/kuzenbodev/kuzenbo#readme",
  "bugs": {
    "url": "https://github.com/kuzenbodev/kuzenbo/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuzenbodev/kuzenbo.git",
    "directory": "packages/hooks"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "./use-fullscreen": {
        "types": "./dist/use-fullscreen.d.ts",
        "import": "./dist/use-fullscreen.js",
        "default": "./dist/use-fullscreen.js"
      },
      "./use-mobile": {
        "types": "./dist/use-mobile.d.ts",
        "import": "./dist/use-mobile.js",
        "default": "./dist/use-mobile.js"
      },
      "./use-isomorphic-effect": {
        "types": "./dist/use-isomorphic-effect.d.ts",
        "import": "./dist/use-isomorphic-effect.js",
        "default": "./dist/use-isomorphic-effect.js"
      },
      "./package.json": "./package.json"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsgo --noEmit --declaration false --declarationMap false",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "storybook": "storybook dev --port 6107 --config-dir .storybook",
    "build:storybook": "storybook build --config-dir .storybook"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "catalog:",
    "@happy-dom/global-registrator": "catalog:",
    "@kuzenbo/storybook": "workspace:*",
    "@kuzenbo/styles": "workspace:*",
    "@kuzenbo/theme": "workspace:*",
    "@storybook/addon-a11y": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/react": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "bun-types": "catalog:",
    "happy-dom": "catalog:",
    "publint": "catalog:",
    "react-dom": "catalog:",
    "storybook": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  }
}
