{
  "name": "@kuzenbo/hooks",
  "version": "0.0.5",
  "private": false,
  "description": "Standalone React hooks for Kuzenbo.",
  "keywords": [
    "hooks",
    "kuzenbo",
    "react",
    "react-hooks",
    "typescript"
  ],
  "homepage": "https://github.com/kuzenbodev/kuzenbo#readme",
  "bugs": {
    "url": "https://github.com/kuzenbodev/kuzenbo/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuzenbodev/kuzenbo.git",
    "directory": "packages/hooks"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./use-clipboard": "./src/use-clipboard/use-clipboard.ts",
    "./use-fullscreen": "./src/use-fullscreen/use-fullscreen.ts",
    "./use-isomorphic-effect": "./src/use-isomorphic-effect/use-isomorphic-effect.ts",
    "./use-mobile": "./src/use-mobile/use-mobile.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      "./use-clipboard": "./dist/use-clipboard.js",
      "./use-fullscreen": "./dist/use-fullscreen.js",
      "./use-isomorphic-effect": "./dist/use-isomorphic-effect.js",
      "./use-mobile": "./dist/use-mobile.js",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsgo --noEmit --declaration false --declarationMap false",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "storybook": "storybook dev --port 6107 --config-dir .storybook",
    "build:storybook": "storybook build --config-dir .storybook"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "catalog:",
    "@happy-dom/global-registrator": "catalog:",
    "@kuzenbo/storybook": "workspace:*",
    "@kuzenbo/styles": "workspace:*",
    "@kuzenbo/theme": "workspace:*",
    "@storybook/addon-a11y": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/react": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "bun-types": "catalog:",
    "happy-dom": "catalog:",
    "publint": "catalog:",
    "react-dom": "catalog:",
    "storybook": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  }
}
