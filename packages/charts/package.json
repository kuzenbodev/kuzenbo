{
  "name": "@kuzenbo/charts",
  "version": "0.0.3",
  "private": false,
  "description": "Chart primitives and prebuilt charts for Kuzenbo.",
  "keywords": [
    "charts",
    "kuzenbo",
    "react",
    "recharts",
    "ui"
  ],
  "homepage": "https://github.com/kuzenbodev/kuzenbo#readme",
  "bugs": {
    "url": "https://github.com/kuzenbodev/kuzenbo/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuzenbodev/kuzenbo.git",
    "directory": "packages/charts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./ui/chart": "./src/ui/chart/chart.ts",
    "./ui/prebuilt": "./src/ui/prebuilt/index.ts",
    "./ui/primitives/chart": "./src/ui/primitives/chart.tsx",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      "./ui/chart": "./dist/ui/chart.js",
      "./ui/prebuilt": "./dist/ui/prebuilt.js",
      "./ui/primitives/chart": "./dist/ui/primitives/chart.js",
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsgo --noEmit --declaration false --declarationMap false",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "storybook": "storybook dev --port 6102 --config-dir .storybook",
    "build:storybook": "storybook build --config-dir .storybook"
  },
  "dependencies": {
    "@kuzenbo/core": "workspace:*",
    "recharts": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwind-variants": "catalog:"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "catalog:",
    "@happy-dom/global-registrator": "catalog:",
    "@kuzenbo/storybook": "workspace:*",
    "@kuzenbo/styles": "workspace:*",
    "@kuzenbo/theme": "workspace:*",
    "@storybook/addon-a11y": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/react": "catalog:",
    "@storybook/react-vite": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "bun-types": "catalog:",
    "happy-dom": "catalog:",
    "publint": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "storybook": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@kuzenbo/core": "^0.0.3",
    "@kuzenbo/theme": "^0.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
