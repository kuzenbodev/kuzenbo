{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "extends": [
    "../../.oxlintrc.json",
    "../../node_modules/ultracite/config/oxlint/react/.oxlintrc.json"
  ],
  "rules": {
    "eslint-plugin-jest/no-conditional-in-test": "off",
    "eslint-plugin-react-hooks/exhaustive-deps": "off",
    "eslint-plugin-react-perf/jsx-no-new-function-as-prop": "off",
